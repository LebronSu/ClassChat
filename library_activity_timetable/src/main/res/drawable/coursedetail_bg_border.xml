<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <corners android:radius="15dp"/>
            <solid android:color="?attr/details_view_border" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape>
            <corners android:radius="15dp"/>
            <solid android:color="?attr/details_view_bg" />
        </shape>
    </item>
</layer-list>