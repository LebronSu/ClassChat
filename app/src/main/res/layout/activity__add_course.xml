<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E9F1F8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff"
        android:orientation="horizontal">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/back_from_addCourse_button"
            android:background="@drawable/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="编辑"
            android:gravity="center"
            android:textSize="24sp"/>
        <View
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFF"
        android:layout_marginTop="20dp"
        android:layout_height="70dp">
        <TextView
            android:layout_width="60dp"
            android:text="课名"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <EditText android:layout_width="0dp"
            android:id="@+id/get_course_name"
            android:layout_weight="1"
            android:hint="未填写"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:textSize="24sp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:background="#E9F1F8"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#FFF"
            android:layout_height="70dp">
            <TextView
                android:layout_width="60dp"
                android:text="教室"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_height="match_parent"/>
            <EditText android:layout_width="0dp"
                android:id="@+id/get_course_room"
                android:layout_weight="1"
                android:background="@null"
                android:hint="未填写"
                android:layout_marginLeft="3dp"
                android:textSize="24sp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#FFF"
            android:layout_height="70dp">
            <TextView
                android:layout_width="60dp"
                android:text="老师"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_height="match_parent"/>
            <EditText android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/get_course_teacher"
                android:background="@null"
                android:hint="未填写"
                android:layout_marginLeft="3dp"
                android:textSize="24sp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#FFF"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="70dp"
                    android:text="星期"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_height="match_parent"/>
                <EditText
                    android:layout_width="50dp"
                    android:id="@+id/get_course_day"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:layout_height="match_parent"/>

            </LinearLayout>


            <LinearLayout android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <EditText
                    android:layout_width="50dp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/get_course_start"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:layout_height="match_parent"/>
                <TextView android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="至"
                    android:layout_height="match_parent"/>
                <EditText
                    android:layout_width="50dp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/get_course_end"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:layout_height="match_parent"/>
                <TextView android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="节"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:background="#FFF"
            android:layout_height="60dp">
            <TextView android:layout_width="70dp"
                android:textSize="24sp"
                android:gravity="center"
                android:text="周数"
                android:layout_height="match_parent"/>
            <EditText
                android:layout_width="50dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/get_course_startWeek"
                android:textSize="24sp"
                android:inputType="number"
                android:digits="1234567890"
                android:layout_height="match_parent"/>
            <TextView android:layout_width="wrap_content"
                android:textSize="24sp"
                android:gravity="center"
                android:text="至"
                android:layout_height="match_parent"/>
            <EditText
                android:layout_width="50dp"
                android:layout_marginLeft="3dp"
                android:id="@+id/get_course_endWeek"
                android:textSize="24sp"
                android:inputType="number"
                android:digits="1234567890"
                android:layout_height="match_parent"/>
            <TextView android:layout_width="wrap_content"
                android:textSize="24sp"
                android:gravity="center"
                android:text="周"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FFF"
        android:layout_marginTop="30dp"
        android:layout_height="60dp">
        <Button android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:id="@+id/add_button"
            android:text="+添加课程"
            android:background="#fff"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>